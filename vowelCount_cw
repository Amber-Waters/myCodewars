function getCount(str) {
  let vowelsCount = 0;
  let string = str.toString();         //make into a string
  for (i = 0; i <= string.length - 1; i++){
    if (string.charAt(i) === 'a' || string.charAt(i) === 'e' || string.charAt(i) === 'i' || string.charAt(i) === 'o' || string.charAt(i) === 'u'){        //loop through the string
    vowelsCount += 1;                   //add 1 for each condition met 
  }
  }
  
  return vowelsCount;
}
console.log(getCount('hello there'))
